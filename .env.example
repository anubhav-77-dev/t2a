# TMDb API (Required)
# Get your key at: https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here

# YouTube Data API v3 (Required)
# Get your key at: https://console.developers.google.com/
YOUTUBE_API_KEY=your_youtube_api_key_here

# OpenAI API (Optional - for enhanced content generation)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Configuration
DEFAULT_REGIONS=US,UK,CA,AU,IN
MAX_COMMENTS_ANALYZE=500
SENTIMENT_THRESHOLD=0.6
